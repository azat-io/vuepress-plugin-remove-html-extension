{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "esnext",
    "target": "es2020",
    "outDir": "./dist",
    "jsx": "preserve",
    "rootDir": "./",
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["./**/*"],
  "exclude": ["./dist"]
}
